<% provide(:title, 'All Users') %>
<h1>ユーザー一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>
  <table class="table table-condensed table-hover" id="table-users">
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.name, user %>
        </td>
        <td>
          <%= format_basic_info(user.work_time) %>
        </td>
        <td>
          <%= format_basic_info(user.basic_time) %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>